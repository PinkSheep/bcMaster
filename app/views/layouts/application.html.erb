<!DOCTYPE html>
<html>
  <head>
    <title>bcMaster: Bitcoin Trading Client</title>
    <meta charset="utf-8">
    <%= stylesheet_link_tag asset_url("bootstrap.min") %>
    <%= stylesheet_link_tag "main", :media => "all" %>

    <%= javascript_include_tag "https://code.jquery.com/jquery.js" %>
    <%= javascript_include_tag asset_url("bootstrap.min.js") %>
    <%= javascript_include_tag asset_url("jquery-latest.js") %>
    <%= javascript_include_tag asset_url("jquery.validate.js") %>
  </head>
<body>

  <div id="main">

    <ul class="nav nav-tabs" id="nav-color">
      <li class=<%= "#{cp(main_index_path)}" %>><%= link_to "Home", main_index_path %></li>
      <li class=<%= "#{cp(trade_index_path)}" %>><%= link_to "Trade", trade_index_path %></li>
      <li class=<%= "#{cp(about_index_path)}" %>><%= link_to "About", about_index_path %></li>
      <li class=<%= "#{cp(disclaimer_index_path)}" %>><%= link_to "Disclaimer", disclaimer_index_path %></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="home">

        <%= yield %>

      </div>


    </div>
  </div>
</body>
</html>
