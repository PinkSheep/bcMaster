<div class="row">
  <h1>Create Order</h1>
</div>
<div class="row">
<%= form_tag({controller: 'trade', action: 'create_order', method: 'post'}, {id: 'trade-form', class: 'form-horizontal', role: 'form'}) do %>
  <%= hidden_field_tag(:domain, 'https://btc-e.com') %>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="pair">Pair</label>
    <div class="col-sm-10">
      <%= select_tag "pair", options_for_select(Btce::API::CURRENCY_PAIRS.collect{|p| [p,p]}) %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="type">Type</label>
    <div class="col-sm-10">
      <label class="radio-inline">
        <%= radio_button_tag :trade_type, "buy" %>
        <%= label_tag :trade_type_buy, 'Buy', value: 'buy' %>
      </label>
      <label class="radio-inline">
        <%= radio_button_tag :trade_type, "sell" %>
        <%= label_tag :trade_type_sell, 'Sell', value: 'sell' %>
      </label>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="rate">Rate</label>
    <div class="col-sm-10">
      <%= text_field_tag(:rate, nil, placeholder: 'Rate', class: 'form-control') %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="amount">Amount</label>
    <div class="col-sm-10">
      <%= text_field_tag(:amount, nil, placeholder: 'Amount', class: 'form-control') %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag('Trade', id: 'trade-button', class: 'submit') %>
    </div>
  </div>
<% end %>
</div>
