<div class="row">
  <h1>
    bcMaster: Bitcoin Trading Client </br>
    <small>BTC Buy: $<%= @btce_buy %> Sell: $<%= @btce_sell %></small>
  </h1>
</div>
<div class="row">
  <div class="col-sm-7">
    <%= image_tag(asset_path("bitcoin.png"), alt: "bcMaster-Logo", title: "bcMaster-Logo") %>
  </div>
  <div class="col-sm-5">
    <p id="login-label"><%= @login_message %> <%= link_to "btc-e.com", "https://btc-e.com" %>:</p>
    <% if @login_form %>
      <%= form_tag({controller: 'main', action: 'login', method: :post}, {id: 'login-form', class: 'form-horizontal'}) do %>
        <%= hidden_field_tag(:domain, 'https://btc-e.com') %>
        <div class="control-group">
          <label class="control-label" for="apikey">API Key</label>
          <div class="controls">
            <%= text_field_tag(:apikey, nil, placeholder: 'API Key') %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="secret">Secret</label>
          <div class="controls">
            <%= password_field_tag(:secret, nil, placeholder: 'Secret') %>
          </div>
        </div>
        <%= submit_tag('Login', id: 'login-button', controller: 'main', method: 'post', class: 'submit') %>
        or
        <%= link_to "Sign up", "https://btc-e.com/reg" %>
      <% end %>
    <% else %>
      <%= form_tag({controller: 'main', action: 'logout', method: 'post'}) do %>
        <%= submit_tag('Logout', id: 'logout', class: 'submit') %>
      <% end %>
    <% end %>
  </div>
</div>
