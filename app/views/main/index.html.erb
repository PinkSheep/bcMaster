<div>
  <table>
    <tr>
      <td id="title-image" width="300px"><%= image_tag("bcMaster_Logo.jpg", :alt => "bcMaster-Logo", :size => "250x252", :title => "bcMaster-Logo") %>
</td>
      <td><h1 id="title">bcMaster: Bitcoin Trading Client</h1></td>
    </tr>
  </table>
</div>

<div id="login">
  <p id="login-label">Please enter your API Key and your Secret Key of <a href="https://btc-e.com">btc-e.com</a>:</p>
  <%= form_tag(controller: 'login', action: 'login', method: 'post', id: 'login-form') do %>
    <table>
      <tr>
        <td><%= text_field_tag(:apikey, nil, placeholder: 'API-Key') %></td>
      </tr>
      <tr>
        <td><%= password_field_tag(:password, nil, placeholder: 'Secret') %></td>
      </tr>
      <tr>
        <td><%= submit_tag('Login', id: 'login-button') %> or <%= link_to "Sign up [not yet implemented]", "signup.html"%></td>
      </tr>
    </table>
  <% end %>
</div>

