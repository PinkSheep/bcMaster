<div>
  <table>
    <tr>
      <td id="title-image" width="300px">
        <%= link_to(image_tag("bcMaster_Logo.png", :alt => "bcMaster-Logo", :size => "250x252", :title => "bcMaster-Logo")) %>
      </td>
      <td><h1 id="title">bcMaster: Bitcoin Trading Client</h1></td>
    </tr>
    <tr><%= @btce_info.ticker("btc_usd") %></tr>
  </table>
</div>

<div id="login">
<p id="login-label">Please enter your API Key and your Secret Key of <%= link_to "btc-e.com", "https://btc-e.com" %>:</p>
  <%= form_tag(controller: 'login', action: 'login', method: 'post', id: 'login-form') do %>
    <%= hidden_field_tag(:domain, 'https://btc-e.com') %>
    <table>
      <tr>
        <td><%= text_field_tag(:apikey, nil, placeholder: 'API-Key') %></td>
      </tr>
      <tr>
        <td><%= password_field_tag(:password, nil, placeholder: 'Secret') %></td>
      </tr>
      <tr>
        <td>
          <%= submit_tag('Login', id: 'login-button', :controller => 'login', :method => 'post') %>
          or <%= link_to "Sign up [not yet implemented]", "main/signup" %>
        </td>
      </tr>
    </table>
  <% end %>
</div>

