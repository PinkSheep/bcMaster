<div class="panel"><div class="panel-body">
<%= form_tag({controller: 'main', action: 'login', method: :post}, {id: 'login-form', class: 'form-horizontal', role: 'form'}) do %>
  <%= hidden_field_tag(:domain, 'https://btc-e.com') %>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="apikey">API-Key</label>
    <div class="col-sm-10">
      <%= text_field_tag(:apikey, nil, placeholder: 'API-Key', class: 'form-control') %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="secret">Secret</label>
    <div class="col-sm-10">
      <%= password_field_tag(:secret, nil, placeholder: 'Secret', class: 'form-control') %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag('Login', class: 'submit') %>
      <%= link_to "Sign up", "https://btc-e.com/reg", class: 'btn btn-default', role: 'button', target: '_blank' %>
    </div>
  </div>
<% end %>
</div></div>